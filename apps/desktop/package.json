{
  "name": "@synth-video/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Electron Main Process + Preload",
  "license": "MIT",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "tsup && electron .",
    "dev:watch": "concurrently \"tsup --watch\" \"electron .\"",
    "build": "tsup",
    "build:electron": "electron-builder",
    "lint": "eslint electron/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@synth-video/adapters": "workspace:*",
    "@synth-video/core": "workspace:*",
    "@synth-video/ports": "workspace:*"
  },
  "devDependencies": {
    "@synth-video/eslint-config": "workspace:*",
    "@synth-video/tsconfig": "workspace:*",
    "@types/node": "^22.10.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.synth-video.desktop",
    "productName": "Synth Video",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../desktop-ui/dist",
        "to": "renderer"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
