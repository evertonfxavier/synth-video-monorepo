{
  "name": "@synth-video/application",
  "version": "1.0.0",
  "private": true,
  "description": "Hooks and orchestration layer",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@synth-video/core": "workspace:*",
    "@synth-video/ports": "workspace:*",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@synth-video/eslint-config": "workspace:*",
    "@synth-video/tsconfig": "workspace:*",
    "@types/react": "^19.0.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
