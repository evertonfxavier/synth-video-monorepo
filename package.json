{
  "name": "synth-video-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Synth Video Monorepo - Video synthesis platform",
  "scripts": {
    "postinstall": "pnpm build:packages",
    "build": "turbo build",
    "build:packages": "turbo build --filter=@synth-video/core --filter=@synth-video/ports --filter=@synth-video/adapters --filter=@synth-video/application --filter=@synth-video/ui",
    "build:web": "turbo build --filter=@synth-video/web",
    "build:desktop": "turbo build --filter=@synth-video/desktop-ui && turbo build --filter=@synth-video/desktop && pnpm --filter @synth-video/desktop build:electron",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@synth-video/web",
    "dev:desktop": "concurrently \"pnpm --filter @synth-video/desktop-ui dev\" \"wait-on http://localhost:5174 && pnpm --filter @synth-video/desktop dev\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@synth-video/eslint-config": "workspace:*",
    "@synth-video/tsconfig": "workspace:*",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "wait-on": "^7.2.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
